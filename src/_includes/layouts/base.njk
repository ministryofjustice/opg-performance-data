<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="theme-color" content="#0b0c0c">

    <link rel="preload" href="{{ '/assets/fonts/light-94a07e06a1-v2.woff2' | url }}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{{ '/assets/fonts/bold-b542beb274-v2.woff2' | url }}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{{ '/assets/styles.css' | url }}" rel="stylesheet" as="style">

    <link rel="shortcut icon" href="{{ '/assets/images/favicon.ico' | url }}" type="image/x-icon">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon-180x180.png' | url }}" sizes="180x180">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon-167x167.png' | url }}" sizes="167x167">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon-152x152.png' | url }}" sizes="152x152">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon.png' | url }}">

    <meta name="description" content="Our live services performance data for public consumption.">
    <meta property="og:image" content="{{ '/assets/images/moj-opengraph-image.png' | url }}">

    <link href="{{ '/assets/styles.css' | url }}" rel="stylesheet">
    <title>{{ title }} - Our live services performance data for public consumption.</title>
  </head>
  <body class="govuk-template__body">
    {%- from "../macros/header.njk" import govukHeader %}
    {%- from "../macros/footer.njk" import govukFooter %}
    {%- from "../../../node_modules/govuk-frontend/dist/govuk/components/skip-link/macro.njk" import govukSkipLink %}
    {%- from "../../../node_modules/govuk-frontend/dist/govuk/components/back-link/macro.njk" import govukBackLink %}
    {{ govukSkipLink({
      text: "Skip to main content",
      href: "#content"
    }) }}
    {% block body %}
        {{ govukHeader({
            homepageUrl: "/",
            serviceName: "OPG Services Performance Data",
            serviceUrl: "/"
          })
        }}

        {% block content %}

        {%- include "../partials/navigation.njk" -%}

        {% if mastheadTitle %}
          <div class="app-masthead">
            <div class="govuk-width-container">
              <div class="govuk-grid-row">
                <div class="govuk-grid-column-full-from-desktop">
                  <h1 class="govuk-heading-xl app-masthead__title">{{ mastheadTitle }}</h1>
                  <p class="app-masthead__description">{{ mastheadDescription }}</p>
                </div>
              </div>
            </div>
          </div>
        {% endif %}

        <div id="content" class="govuk-width-container">

          {% if backLink %}
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-full">
                {{ govukBackLink({
                  text: "Back",
                  href: (backLink)
                }) }}
              </div>
            </div>
          {% endif %}

          <main class="govuk-main-wrapper" role="main">

            {{ content | safe }}

          </main>
        </div>
        {% endblock %}

        {{ govukFooter({
            meta: {
              items: [
                {
                  href: "https://www.data.gov.uk/dataset/df217056-4d73-44b5-a1fb-e0f9a1421bf3/opg-make-a-lasting-power-of-attorney-performance-data",
                  text: "Make a Lasting Power of Attorney performance data"
                },
                {
                  href: "https://www.data.gov.uk/dataset/745b2d6b-a185-4e19-86ee-96d764c536c9/opg-use-a-lasting-power-of-attorney-performance-data",
                  text: "Use a Lasting Power of Attorney performance data"
                },
                {
                  href: "https://www.data.gov.uk/dataset/44bee35c-0ed4-4b69-9780-be22f0f1e517/opg-complete-the-deputy-report-performance-data",
                  text: "Complete the deputy report performance data"
                }
              ]
            }
          })
        }}

      </div>
    {% endblock %}
  </body>
</html>
